<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/text_dark_gray" >
    
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
	    <ImageView
		    android:id="@+id/imgv_tabbar"
		    android:layout_width="fill_parent"
		    android:layout_height="47.5dp"
		    android:padding="0dip"
		    android:layout_margin="0dip"
		    android:scaleType="fitXY"
		    android:src="@drawable/ring_topbutton1"/>
	    
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="47.5dp"
	        android:orientation="horizontal" >
	        
	        <View
	            android:id="@+id/view_top_tabbar_about"
	            android:layout_width="0dp"
	            android:layout_height="fill_parent"
	            android:layout_weight="1" />
	        
	        <View
	            android:id="@+id/view_top_tabbar_settings"
	            android:layout_width="0dp"
	            android:layout_height="fill_parent"
	            android:layout_weight="1" />
	        
	    </LinearLayout>
        
    </FrameLayout>
    
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal" >

        <ImageView
            android:id="@+id/imgv_bg"
            android:layout_width="337dp"
            android:layout_height="394dp"
            android:src="@drawable/test_bg"
            android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal"/>

        <FrameLayout
            android:layout_width="337dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="40dp" >
            
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:layout_gravity="bottom"
                android:background="#55000000">
                
	            <ImageView
	                android:id="@+id/imgv_profile_img"
	                android:layout_width="60dp"
	                android:layout_height="60dp"
	                android:background="#dfd3dd"
	                android:layout_margin="10dp" />
	            
	            <LinearLayout
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:orientation="vertical" >
	                
	                <TextView
	                    android:id="@+id/txtv_phone_num"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:textSize="@dimen/text_big_size"
	                    android:text="010-5106-0001"
	                    android:layout_marginTop="6dp"
	                    android:layout_marginBottom="3dp"
	                    android:textColor="@color/text_orange" />
	                
	                <TextView
	                    android:id="@+id/txtv_name"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:textSize="@dimen/text_small_size"
	                    android:text="Rainbox @_@"
	                    android:textColor="#ffffff"
	                    android:layout_margin="0dp"
	                    android:textStyle="bold" />
	                
	                <TextView
	                    android:id="@+id/txtv_desc"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:textSize="@dimen/text_small_size"
	                    android:text="게으른 블로거, 세상 삐딱하게 바라보기"
	                    android:textColor="#ffffff" />
	            </LinearLayout>
            </LinearLayout>
        </FrameLayout>
        <ImageView
            android:id="@+id/imgv_my_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:src="@drawable/service_roundbox" />
        
    </FrameLayout>
    
    <View
		android:layout_width="fill_parent"
		android:layout_height="0dp"
		android:layout_weight="1" />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings_profile_info_guide"
        android:textColor="@color/text_orange"
        android:textSize="@dimen/text_very_small_size"
        android:textStyle="bold"
        android:gravity="center_horizontal" />
    
    <View
		android:layout_width="fill_parent"
		android:layout_height="0dp"
		android:layout_weight="1" />
    
    <Button
	    android:id="@+id/btn_next"
	    android:background="@drawable/ring_button_d"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:scaleType="fitXY"
	    android:padding="0dp"
	    android:text="완 료"
	    android:textStyle="bold"
	    android:textSize="@dimen/text_little_big_size"
	    android:textColor="@color/text_orange" />
    
    <View
		android:layout_width="fill_parent"
		android:layout_height="0dp"
		android:layout_weight="1" />

    
</LinearLayout>