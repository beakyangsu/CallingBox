<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_dark_gray"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/imgv_tabbar"
            android:layout_width="fill_parent"
            android:layout_height="47.5dp"
            android:layout_margin="0dip"
            android:padding="0dip"
            android:scaleType="fitXY"
            android:src="@drawable/ring_topbutton1" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="47.5dp"
            android:orientation="horizontal" >

            <View
                android:id="@+id/view_top_tabbar_about"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1" />

            <View
                android:id="@+id/view_top_tabbar_settings"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1" />
        </LinearLayout>
    </FrameLayout>

    <com.talesapp.phonereceiver.MyScrollView
        android:id="@+id/scrllv_parent_layout"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:id="@+id/lyt_layout_in_scroll"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="360dp"
                android:layout_gravity="center_horizontal" >

                <ImageView
                    android:id="@+id/imgv_bg"
                    android:layout_width="fill_parent"
                    android:layout_height="360dp"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerCrop" />

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginBottom="0dp" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:orientation="vertical" >

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="2dp"
                            android:background="#22000000" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="80dp"
                            android:background="#55000000"
                            android:orientation="horizontal" >

                            <ImageView
                                android:id="@+id/imgv_profile_img"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_margin="10dp"
                                android:scaleType="centerCrop" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical" >

                                <TextView
                                    android:id="@+id/txtv_phone_num"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="3dp"
                                    android:layout_marginTop="6dp"
                                    android:text="01012341234"
                                    android:shadowColor="#66000000"
                                    android:shadowDy="2.0"
                                    android:shadowRadius="1.5"
                                    android:textColor="@color/text_orange"
                                    android:textSize="@dimen/text_big_size" />

                                <TextView
                                    android:id="@+id/txtv_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="0dp"
                                    android:singleLine="true"
                                    android:textColor="#ffffff"
                                    android:textSize="@dimen/text_small_size"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/txtv_desc"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:singleLine="true"
                                    android:textColor="#ffffff"
                                    android:textSize="@dimen/text_small_size" />
                            </LinearLayout>
                        </LinearLayout>

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:background="#aa000000" />

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:background="#22ffffff" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:background="#55000000"
                            android:gravity="center_vertical"
                            android:paddingLeft="7dp" >

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_margin="3dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/small01" />

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_margin="3dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/small02" />

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_margin="3dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/small03" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/btn_1_1" />

                            <ImageView
                                android:id="@+id/imgv_x_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="15dp"
                                android:src="@drawable/x_button" />
                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>
                <!-- <ImageView -->
                <!-- android:id="@+id/imgv_my_bg" -->
                <!-- android:layout_width="wrap_content" -->
                <!-- android:layout_height="wrap_content" -->
                <!-- android:layout_gravity="center_horizontal" -->
                <!-- android:scaleType="centerCrop" -->
                <!-- android:src="@drawable/service_roundbox" /> -->

            </FrameLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="45dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/settings_profile_info_guide"
                android:textColor="@color/text_orange"
                android:textSize="@dimen/text_very_small_size"
                android:textStyle="bold" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btn_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ring_button_d"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:text="완 료"
                android:textColor="@color/text_orange"
                android:textSize="@dimen/text_little_big_size"
                android:textStyle="bold" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />
        </LinearLayout>
    </com.talesapp.phonereceiver.MyScrollView>

    <LinearLayout
        android:id="@+id/lyt_input_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone" >

        <EditText
            android:id="@+id/edt_input_box"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK" />
    </LinearLayout>

</LinearLayout><!-- From: file:/Users/willkim/Dropbox/4_Codes/Android/CallingBox/app/src/main/res/layout-xhdpi/act_setting_info.xml -->