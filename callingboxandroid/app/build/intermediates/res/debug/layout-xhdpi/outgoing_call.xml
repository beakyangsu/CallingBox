        <ImageView
            android:id="@+id/imgv_bg"
            android:layout_width="fill_parent"
            android:layout_height="360dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:src="@drawable/test_bg" />

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="0dp" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="vertical" >

                <View 
				    android:layout_width="fill_parent"
				    android:layout_height="2dp"
				    android:background="#22000000"/>

			    <LinearLayout
			        android:layout_width="fill_parent"
			        android:layout_height="80dp"
			        android:background="#55000000"
			        android:orientation="horizontal" >

			        <ImageView
			            android:id="@+id/imgv_profile_img"
			            android:layout_width="60dp"
			            android:layout_height="60dp"
			            android:layout_margin="10dp"
			            android:scaleType="centerCrop" />

			        <LinearLayout
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:orientation="vertical" >

			            <TextView
			                android:id="@+id/txtv_phone_num"
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:layout_marginBottom="3dp"
			                android:layout_marginTop="6dp"
			                android:textColor="@color/text_orange"
			                android:textSize="@dimen/text_big_size" />

			            <TextView
			                android:id="@+id/txtv_name"
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:layout_margin="0dp"
			                android:singleLine="true"
			                android:text="My name"
			                android:textColor="#ffffff"
			                android:textSize="@dimen/text_small_size"
			                android:textStyle="bold" />

			            <TextView
			                android:id="@+id/txtv_desc"
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:singleLine="true"
			                android:text="About myself"
			                android:textColor="#ffffff"
			                android:textSize="@dimen/text_small_size" />
			        </LinearLayout>
			    </LinearLayout>

			    <View
			        android:layout_width="fill_parent"
			        android:layout_height="1dp"
			        android:background="#aa000000" />

			    <View
			        android:layout_width="fill_parent"
			        android:layout_height="1dp"
			        android:background="#22ffffff" />

			    <LinearLayout
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:layout_gravity="bottom"
			        android:background="#55000000"
			        android:gravity="center_vertical"
			        android:paddingLeft="7dp" >

			        <ImageView
			            android:layout_width="35dp"
			            android:layout_height="35dp"
			            android:layout_margin="3dp"
			            android:scaleType="centerCrop"
			            android:src="@drawable/small01" />

			        <ImageView
			            android:layout_width="35dp"
			            android:layout_height="35dp"
			            android:layout_margin="3dp"
			            android:scaleType="centerCrop"
			            android:src="@drawable/small02" />

			        <ImageView
			            android:layout_width="35dp"
			            android:layout_height="35dp"
			            android:layout_margin="3dp"
			            android:scaleType="centerCrop"
			            android:src="@drawable/small03" />

			        <View
			            android:layout_width="0dp"
			            android:layout_height="match_parent"
			            android:layout_weight="1" />

			        <ImageView
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:src="@drawable/btn_1_1" />

			        <ImageView
			            android:id="@+id/imgv_x_btn"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_margin="15dp"
			            android:src="@drawable/x_button" />
			    </LinearLayout>
			</LinearLayout>
        </FrameLayout>
        
